<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Switch<small>Asset Details</small></h2>
            <div class="clearfix"></div>
            <a href="<%=new_laptop_path%>" class="btn btn-primary">New Switch Asset</a>
          </div>
          <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th style="width: 7%;">ID</th>
                  <th>Asset Tag</th>
                  <th>Host Name</th>
                  <th>Make</th>
                  <th>Model</th>
                  <th>Serial Number</th>
                  <th>Mac Address</th>
                </tr>
              </thead>
              <tbody>
                <% @switch_details.each do |switch| %>
                <tr>
                  <td><%=switch.id%></td>
                  <td><%=link_to switch.asset_tag, edit_switch_path(switch.id), {:style=>'text-decoration:underline;'}%></td>
                  <td><%=switch.host_name%></td>
                  <td><%=switch.make%></td>
                  <td><%=switch.model%></td>
                  <td><%=switch.serial_number%></td>
                  <td><%=switch.mac%></td>
                  <td><%=link_to ' Remove', switch_path(switch.id), method: 'DELETE', data: {confirm: "Are you sure want to delete this?"},:class => 'fa fa-trash-o'%></td>
                </tr>
                <%end %>
              </tbody>
            </table>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>