<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Desktop<small>Asset Details</small></h2>
            <div class="clearfix"></div>
            <a href="<%=new_desktop_path%>" class="btn btn-primary">New Desktop Asset</a>
          </div>
          <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th style="width: 7%;">ID</th>
                  <th>Asset Tag</th>
                  <th>Host Name</th>
                  <th>Make</th>
                  <th>Model</th>
                  <th>Serial Number</th>
                  <th>Mac Address</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @desktop_details.each do |desktop_detail| %>
                <tr>
                  <td><%=desktop_detail.id%></td>
                  <td><%=link_to desktop_detail.asset_tag, edit_laptop_path(desktop_detail.id), {:style=>'text-decoration:underline;'}%></td>
                  <td><%=desktop_detail.host_name%></td>
                  <td><%=desktop_detail.make%></td>
                  <td><%=desktop_detail.model%></td>
                  <td><%=desktop_detail.serial_number%></td>
                  <td><%=desktop_detail.mac%></td>
                  <td><%=link_to ' Remove', desktop_path(desktop_detail.id), method: 'DELETE', data: {confirm: "Are you sure want to delete this?"},:class => 'fa fa-trash-o'%></td>
                </tr>
                <%end %>
              </tbody>
            </table>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>